@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login Page</title>
    <link rel="shortcut icon" href="~/Assets/Images/title icon.png" type="image/x-icon">

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/lib/fontawesome/css/all.css"/>
    <link href="~/dashboard/css/sb-admin-2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/main/css/style.css" asp-append-version="true" />

</head>

<body class="bg-gradient-success">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9" style="margin-top: 11%;">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row bg-card">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image">
                            </div>
                            <div class="col-lg-6 ">
                                <div class="p-5 bg-card">
                                    <div class="text-center">
                                        <h4 class="mb-4">Welcome Back!</h4>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                   id="email" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Password">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>
                                        <a asp-controller="Home" asp-action="UserIndex" onclick="validateEmail()" class="custom-btn custom-btn-success btn-user btn-block">
                                            Login
                                        </a>
                                        <hr>
                                        <a href="index-user.html" class="custom-btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index-user.html" class="custom-btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small custom-a" href="/Accounts/ForgetPassword">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small custom-a" href="/Accounts/Register">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <script src="~/main/js/validate-email.js"></script>
</body>
</html>