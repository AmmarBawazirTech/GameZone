@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Forgot Password Page</title>
    <link rel="shortcut icon" href="~/Assets/Images/title icon.png" type="image/x-icon">


    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/lib/fontawesome/css/all.css"/>
    <link href="~/dashboard/css/sb-admin-2.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/main/css/style.css" asp-append-version="true" />

</head>

<body class="bg-gradient-success">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9" style="margin-top: 18%;">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row bg-card">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5 bg-card">
                                    <div class="text-center">
                                        <h4 class="mb-2">Forgot Your Password?</h4>
                                        <p class="mb-4">
                                            We get it, stuff happens. Just enter your email address below
                                            and we'll send you a link to reset your password!
                                        </p>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Enter Email Address...">
                                        </div>
                                        <a href="#" class="custom-btn custom-btn-success btn-user btn-block" onclick="alert('A Reset Link Has Been Sent To Your Email Address')">
                                            Reset Password
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small custom-a" href="/Accounts/Register">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small custom-a" href="/Accounts/Login">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    @* <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script> *@
</body>
</html>